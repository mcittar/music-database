
<% @bands.each do |band| %>
  <%= band.name %>
  <form action="<%= edit_band_url(band) %>" name="band[id]" value="<%= band.id %>" method="get">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="submit" name="" value="Edit">
  </form>
  <form action="<%= band_url(band) %>" name="band[id]" value="<%= band.id %>" method="get">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="submit" name="" value="Show">
  </form>
  <br>
<% end %>
